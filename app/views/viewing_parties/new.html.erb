<h3><%= "Movie title: #{@movie.data[:original_title]}" %></h3>
<p>
<%= form_with model: @viewing_party, local: true do |f| %>

  <%= f.label :movie_title, "Movie Title" %>
  <%= f.text_field :movie_title, value: @movie.data[:original_title], readonly: true %>
  <br>
  <%= f.label :party_duration, "Party Duration:" %>
  <%= f.number_field :party_duration, value: @movie.data[:runtime]%>
  <br>
  <%= f.label :party_date, "Party Date:" %>
  <%= f.date_field :party_date%>
  <br>
  <%= f.label :party_time, "Party Time:" %>
  <%= f.time_field :party_time%>
  <br>
<% end%>
</p>