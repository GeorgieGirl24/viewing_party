<%= button_to 'Discover Top 40', results_path, method: :get %>

<%= form_tag results_path, method: :get, local: true do %>
  <%= label_tag :search %>
  <%= search_field_tag :search %>
  <%= submit_tag 'Search' %>
<% end%>
<br>
<% if @search %>
<%= "Your search for #{@search} returned #{@movies.count} results:" %><br>
<% else %>
<%= "Top 40 Movies:" %><br>
<% end %>

<% @movies.each do |movie| %>
  <p class="movie">
    Movie Title: <%= link_to "#{movie.title}",  movie_path("#{movie.movie_id}") %><br>
    Vote Average: <%= movie.vote_average %></p>
<% end%>
