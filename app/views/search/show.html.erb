<%= button_to 'Discover Top 40', results_path, method: :get%>

<%= form_tag results_path, method: :get, local: true do %>
  <%= label_tag :search %>
  <%= search_field_tag :search %>
  <%= submit_tag 'Search' %>
<% end%>
<br>
<% @movie_details.each do |movie| %>
  <p class="movie">
    Movie Title: <%= link_to "#{movie.title}",  movie_path('uuid') %><br>
    Vote Average: <%= movie.vote_average %><br>
  </p>

<% end%>
