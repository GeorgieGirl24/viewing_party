<%= button_to "Discover Top 40", "/results", method: :get%>

<%= form_tag '/results', method: :get, local: true do %>
  <%= label_tag :search %>
  <%= search_field_tag :search %>
  <%= submit_tag 'Search' %>
<% end%>
<br>
<br>
<% @movies.results.each do |movie| %>
  <p class="movie">
    Movie Title: <%= link_to "#{movie[:original_title]}", "/movies/#{movie[:id]}" %><br>
    Vote Average: <%= movie[:vote_average] %><br>
  </p>
  
<% end%>